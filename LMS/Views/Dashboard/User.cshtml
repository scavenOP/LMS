@model IEnumerable<LMS.Models.Reports>
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Name 's Dashboard</h2>

<h3>Books Rented By Me</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Issue Date</th>
            <th>Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
        <tr>

            <td>@report.Book.Name</td>
            <td>@report.IssueDate.ToString("dd/M/yyyy")</td>
            <td>@report.ReturnDate.ToString("dd/M/yyyy")</td>
            
        </tr>
        }
    </tbody>
</table>

