@model LMS.ViewModel.AuthorDisplayViewModel
@{
    ViewBag.Title = "DisplayAuthor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2><b> @Model.Author.Name</b></h2>

<h2>Date of Birth : @Model.Author.DOB.Date.ToString("dd/M/yyyy")</h2>

<h2>About : @Model.Author.About</h2>

Books Written By @Model.Author.Name :

<ul>
    @foreach (var book in Model.Books)
    {
    <li>
        @Html.ActionLink(book.Name, "DisplayBook", "Search", new { id = book.Id }, null) <br />
    </li>
    }
</ul> 

