@model LMS.Models.Author
@{
    ViewBag.Title = "Author";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enter Author Details</h2>
@using (Html.BeginForm("Author", "Update"))
{
    <div class="form-group">
        @Html.LabelFor(b => b.Name)
        @Html.TextBoxFor(b => b.Name)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(b => b.DOB)
        @Html.TextBox("DOB", Model.DOB, "{0:yyyy-MM-dd}", new { @style = "width:100%", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.About)
        @Html.TextAreaFor(b => b.About)
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
